{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "typescript"],
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["warn"]
  }
}
